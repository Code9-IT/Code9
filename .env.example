# =============================================================
# Maritime Agentic Observability – Environment Variables
# =============================================================
# Copy this file to .env and edit as needed.
#   cp .env.example .env
# NEVER commit the real .env to git.
# =============================================================

# ─── DATABASE ─────────────────────────────────────────────
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=maritime_telemetry
DB_PORT=5432

# ─── GRAFANA ──────────────────────────────────────────────
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# ─── AGENT SERVICE ────────────────────────────────────────
AGENT_PORT=8000
# Ollama URL – points to the ollama container (or localhost if running outside Docker)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBED_MODEL=nomic-embed-text
RAG_TOP_K=3
RAG_MIN_SIMILARITY=0.20
KNOWLEDGE_DIR=/app/docs/knowledge

# ─── GENERATOR ────────────────────────────────────────────
# How often (seconds) the generator writes a batch of telemetry
GENERATE_INTERVAL_SECONDS=3
# Per-sensor anomaly probability per cycle.
# With 77 threshold combinations: P(event/cycle) = 1-(1-p)^77.
# 0.00008 → ~1 event per 8 minutes at 3s interval (good for demos).
# Set higher (e.g. 0.001) for rapid testing: ~1 event per minute.
ANOMALY_PROBABILITY=0.00008
# Stale-sensor watchdog: fires a sensor_offline event if a sensor is silent longer than this.
# Runs every WATCHDOG_INTERVAL_CYCLES cycles (default 10 × 3s = every 30s).
STALE_SENSOR_SECONDS=60
WATCHDOG_INTERVAL_CYCLES=10
