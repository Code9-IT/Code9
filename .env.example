# =============================================================
# Maritime Agentic Observability – Environment Variables
# =============================================================
# Copy this file to .env and edit as needed.
#   cp .env.example .env
# NEVER commit the real .env to git.
# =============================================================

# ─── DATABASE ─────────────────────────────────────────────
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=maritime_telemetry
DB_PORT=5432

# ─── GRAFANA ──────────────────────────────────────────────
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# ─── AGENT SERVICE ────────────────────────────────────────
AGENT_PORT=8000
# Ollama URL – points to the ollama container (or localhost if running outside Docker)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3

# ─── GENERATOR ────────────────────────────────────────────
# How often (seconds) the generator writes a batch of telemetry
GENERATE_INTERVAL_SECONDS=3
# Probability (0–1) that a single vessel produces an anomaly per cycle
ANOMALY_PROBABILITY=0.05
